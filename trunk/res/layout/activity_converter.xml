<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
     >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#33b5e5"
    android:paddingBottom="8dip"
    android:paddingTop="8dip"
    android:textColor="#ffffff"
    android:textSize="16dip"
    
    android:text="Decimal Coordinate"
    android:paddingLeft="10dip"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        >

        <EditText
            android:id="@+id/latDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:ems="10"
            android:inputType="numberDecimal">
            <requestFocus />
            </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/latDecimal"
            android:layout_alignBottom="@+id/latDecimal"
            android:layout_alignParentLeft="true"
            android:text="Latitude"
            android:layout_marginLeft="5dip"
             />

    </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/lonDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lonDecimal"
            android:layout_alignBottom="@+id/lonDecimal"
            android:layout_alignParentLeft="true"
            android:text="Longitude" 
            android:layout_marginLeft="5dip"
            />

    </RelativeLayout>

      <com.google.ads.AdView
          android:id="@+id/adViewConvert"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:layout_gravity="center_vertical|center_horizontal"
          ads:adSize="BANNER"
          ads:adUnitId="a1502d044a3018b"
          ads:loadAdOnCreate="true"
          android:gravity="center_horizontal"
          android:paddingBottom="6dip"
          android:paddingTop="6dip" />
        
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#33b5e5"
    android:paddingBottom="8dip"
    android:paddingTop="8dip"
    android:textColor="#ffffff"
    android:textSize="16dip"
    
    android:text="Degree Coordinate"
    android:paddingLeft="10dip"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/degreelat"
       android:layout_alignBottom="@+id/degreelat"
       android:layout_alignParentLeft="true"
       android:layout_marginLeft="5dip"
       android:text="Lat" />

   <EditText
       android:id="@+id/degreelat"
       android:layout_width="72dip"
       android:layout_height="wrap_content"
       android:layout_marginRight="16dp"
       android:layout_marginLeft="16dp"
       android:ems="10"
       android:inputType="numberSigned" >

       
   </EditText>
   
           <EditText
            android:id="@+id/minutelat"
            android:layout_width="72dip"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/secondlat"
            android:ems="10"
            android:inputType="number" />

           <EditText
               android:id="@+id/secondlat"
               android:layout_width="72dip"
               android:layout_height="wrap_content"
               android:layout_marginRight="16dp"
               android:ems="10"
               android:inputType="numberDecimal" />

    </LinearLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_marginLeft="5dip"
       android:text="Lon" />

   <EditText
       android:id="@+id/degreelon"
       android:layout_width="72dip"
       android:layout_height="wrap_content"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       android:ems="10"
       android:inputType="numberSigned" >

       
   </EditText>
   
           <EditText
            android:id="@+id/minutelon"
            android:layout_width="72dip"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            
            android:ems="10"
            android:inputType="number" />

           <EditText
               android:id="@+id/secondlon"
               android:layout_width="72dip"
               android:layout_height="wrap_content"
               android:layout_marginRight="16dp"
               android:ems="10"
               android:inputType="numberDecimal" />

    </LinearLayout>
    
</LinearLayout>
